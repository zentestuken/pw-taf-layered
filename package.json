{
  "name": "playwright_taf_runners",
  "version": "1.0.0",
  "description": "Playwright TAF for a Shopping cart app (with PW runner, Typescript and proper layers)",
  "main": "index.js",
  "scripts": {
    "install-browser": "playwright install chromium",
    "lint": "eslint -c utility/eslint.config.mjs .",
    "lint-fix": "eslint -c utility/eslint.config.mjs . --fix",
    "type-check": "tsc --noEmit",
    "pretest": "run-s type-check lint-fix",
    "test": "playwright test --config utility/playwright.config.ts",
    "test:ui": "playwright test --ui",
    "generate-report": "allure generate artifacts/allure-results --clean -o artifacts/allure-report",
    "get-report": "npm run generate-report && allure open artifacts/allure-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zentestuken/pw-taf-layered.git"
  },
  "keywords": [
    "playwright",
    "Node.js",
    "test",
    "automation",
    "typescript"
  ],
  "author": "Yauhen Viazau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zentestuken/pw-taf-layered/issues"
  },
  "homepage": "https://github.com/zentestuken/pw-taf-layered#readme",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.10.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "allure-commandline": "^2.34.1",
    "allure-js-commons": "^3.3.3",
    "allure-playwright": "^3.4.3",
    "cross-env": "^10.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-playwright": "^2.2.2",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.4",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.54.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "wait-on": "^8.0.4"
  }
}
